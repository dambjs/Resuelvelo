<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:background="@color/tw__solid_white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="294dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image"
            android:layout_width="167dp"
            android:layout_height="150dp"
            android:layout_marginLeft="20dp"/>

        <TextView
            android:id="@+id/nombreEmp"
            android:layout_width="145dp"
            android:layout_height="45dp"
            android:layout_marginLeft="15dp" />

        <TextView
            android:id="@+id/fechaEmp"
            android:layout_width="145dp"
            android:layout_height="45dp"
            android:layout_marginLeft="-145dp"
            android:layout_marginTop="50dp" />

        <TextView
            android:id="@+id/director"
            android:layout_width="145dp"
            android:layout_height="45dp"
            android:layout_marginLeft="-145dp"
            android:layout_marginTop="100dp" />

        <TextView
            android:id="@+id/descEmp"
            android:layout_width="251dp"
            android:layout_height="88dp"
            android:layout_marginLeft="-290dp"
            android:layout_marginTop="180dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp">

            <android.support.v7.widget.CardView
                android:id="@+id/card2"
                android:layout_marginTop="20dp"
                card_view:cardBackgroundColor="#2ECCFA"
                android:layout_width="match_parent"
                android:layout_height="200dp">

                <TextView
                    android:id="@+id/txt1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#A9F5F2"
                    android:padding="10dp"
                    android:text="@string/grupos"
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/nombreDept"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50dp"
                    android:layout_marginLeft="25dp"
                    android:textColor="@android:color/black"
                    android:textSize="25sp" />

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="29dp"
                    android:layout_gravity="right"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="5dp"
                    android:onClick="add"
                    android:src="@mipmap/mas" />

            </android.support.v7.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:text="Crear incidencia"
                android:onClick="create"/>

            <Button
                android:layout_width="148dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="Ver incidencia" />

        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>