<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

            <!-- Letras Departamento -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_marginStart="30dp"
                android:text="@string/departamentotitulo"
                android:textAllCaps="true"
                android:textSize="24sp"
                android:textColor="#7426b7" />

            <include layout="@layout/spinner1"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginStart="30dp"
                android:text="@string/destinatariotitulo"
                android:textAllCaps="true"
                android:textSize="24sp"
                android:textColor="#7426b7" />

            <include layout="@layout/spinner2"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginStart="30dp"
                android:text="@string/motivotitulo"
                android:textAllCaps="true"
                android:textSize="24sp"
                android:textColor="#7426b7" />

            <include layout="@layout/spinner3"/>

        <EditText
            android:id="@+id/textootros"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginStart="30dp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginStart="30dp"
            android:text="@string/prioridad"
            android:textAllCaps="true"
            android:textSize="24sp"
            android:textColor="#7426b7" />

        <include layout="@layout/spinner4"/>


        <ImageView
            android:id="@+id/add"
            android:layout_width="60dp"
            android:layout_height="70dp"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="60dp"
            android:src="@mipmap/add" />

        <ImageView
            android:id="@+id/image"
            android:layout_width="162dp"
            android:layout_marginTop="25dp"
            android:layout_height="186dp"
            android:layout_gravity="center" />

        <Button
            android:id="@+id/enviar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:background="#6eda1e"
            android:text="@string/botonenviar"
            android:textColor="#FFFFFF"
            android:textSize="20dp"
            android:layout_alignParentBottom="true"
            android:textStyle="bold" />
    </LinearLayout>
</ScrollView>