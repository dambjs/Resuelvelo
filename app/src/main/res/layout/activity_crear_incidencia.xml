<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Letras Departamento -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginStart="30dp"
            android:text="@string/departamentotitulo"
            android:textSize="24sp"
            android:textColor="#7426b7" />

        <include layout="@layout/spinner1"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginStart="30dp"
            android:text="@string/destinatariotitulo"
            android:textSize="24sp"
            android:textColor="#7426b7" />

        <include layout="@layout/spinner2"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginStart="30dp"
            android:text="@string/motivotitulo"
            android:textSize="24sp"
            android:textColor="#7426b7" />

        <include layout="@layout/spinner3"/>

        <ImageView
            android:id="@+id/add"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="35dp"
            android:background="@mipmap/add"
            android:layout_width="50dp"
            android:layout_height="50dp" />

        <ImageView
            android:id="@+id/image"
            android:layout_width="162dp"
            android:layout_height="186dp"
            android:layout_gravity="center" />

        <Button
            android:id="@+id/enviar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#6eda1e"
            android:textColor="#FFFFFF"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:textSize="20dp"
            android:text="@string/botonenviar" />

    </LinearLayout>

</ScrollView>